<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
    <link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
    <div id="background">
        <div id="page">
            {{> header rooms="rooms"}}
            <div id="contents">
                <div class="box">
                    <div>
                        <div class="body">
                            <h1>Rooms</h1>
                            <ul id="rooms">
                                {{#each rooms}}
                                <li>
                                    <a href="/rooms/{{this.code}}"><img src="images/{{this.image}}" alt="Room Image"></a>
                                    <h2><a href="/rooms/{{this.code}}">{{this.name}}</a></h2>
                                    <p>{{this.description}}</p>
                                    <span class="rate">Rate: ${{this.rate}} / Day</span>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{> footer}}
    </div>
</body>
</html>
